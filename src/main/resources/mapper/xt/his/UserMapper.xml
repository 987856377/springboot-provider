<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.provider.mapper.his.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.springboot.provider.entity.User">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, password
    </sql>
    <insert id="insert" parameterType="com.springboot.provider.entity.User">
        insert into user(username) values (#{username})
    </insert>

    <select id="getUser" resultType="com.springboot.provider.entity.User">
        select
        <include refid="Base_Column_List"></include>
        from user
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            <if test="id != null">
                id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
        </trim>
    </select>

    <update id="updateUser" parameterType="com.springboot.provider.entity.User">
        update user
        <trim prefix="SET" suffixOverrides=",">
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and username != ''">
                password = #{password},
            </if>
        </trim>
        <where>
            id = #{id}
        </where>
    </update>

    <select id="getUserList" resultType="com.springboot.provider.entity.User">
        select
        <include refid="Base_Column_List"></include>
        from user
    </select>
</mapper>
